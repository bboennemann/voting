<% unless current_user.friend_requests.empty? %>
	<%= render template: '/friend_requests/index' %>
	<br><hr><br>
<% end %>


<% unless current_user.friends.empty? %>
	<h3>Your Friends:</h3>
	<div class="row">

		<% @friends.each_with_index do |friend, i| %>

			<div class="col-sm-3">
				<%= render 'one_friend', my_friend: friend %>

			</div>
			<div class="col-sm-1">
				&nbsp;
			</div>
			
  			<% if ((i+1) % 3) == 0 %>
		</div>  		
		<div class="row">
  			<% end %>
	
		<% end %>
	</div>
<% end %>


<% content_for :my_context_nav do %>
	<%= render 'my_account/side_nav/friends_context_nav' %>
<% end %>