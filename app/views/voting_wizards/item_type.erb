<div class="wizardContainer">

	<div class="row">
		<div class="col-md-1">
			&nbsp;
		</div>
		<div class="col-md-10 text-primary">
			<h1>Voting Wizard</h1>
		</div>
		<div class="col-md-1">
			&nbsp;
		</div>
	</div>	
	
	<div class="row">
		<div class="col-md-1">
			&nbsp;
		</div>
		<div class="col-md-10">
			<div class="progress">
				<div class="progress-bar" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" style="width: 25%;">
			    	1 of 4
			  	</div>
			</div>
		</div>
		<div class="col-md-1">
			&nbsp;
		</div>
	</div>	

	<div class="row">
		<div class="col-md-1">
			&nbsp;
		</div>
		<div class="col-md-10 text-primary">
			<h3>Step 1: Select item type</h3>
			<p>What kind of items will you display in your voting?</p>
		</div>
		<div class="col-md-1">
			&nbsp;
		</div>
	</div>	


	<div class="row">
		<div class="col-md-1">
			&nbsp;
		</div>
		<div class="col-md-2">
			<%= render '/voting_wizards/item_types/image' %>
		</div>
		<div class="col-md-2">
			<%= render '/voting_wizards/item_types/product' %>
		</div>
		<div class="col-md-2">
			<%= render '/voting_wizards/item_types/place' %>
		</div>
		<div class="col-md-2">
			<%= render '/voting_wizards/item_types/website' %>
		</div>
		<div class="col-md-2">
			&nbsp;
		</div>
		<div class="col-md-1">
			&nbsp;
		</div>
	</div>	

</div>