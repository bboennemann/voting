 <!DOCTYPE html>
<html>
<head>
  <title><%= @voting.title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container-fluid">
    
    <%= render 'layouts/navigation/navigation_bar' %>

    <div class="row">
      <div class="col-md-2 sidebar">
        <%= render 'layouts/navigation/side_nav' %>
      </div>

      <div class="col-md-10 sidebar">
        <%= render '/layouts/shared/success_msg' %>
        <%= render '/layouts/shared/warning_msg' %>
        <%= render '/layouts/shared/error_msg' %>

        <%= yield %>  
      </div>


    </div>
  <%= render 'layouts/shared/canvas' %>
  <%= render 'layouts/shared/voting_canvas' %>
</div>

  <% if params[:autostart] %>
    <script type="text/javascript">
      var autostart_url = "<%= "/#{@voting.voting_type}_votings/#{@voting.id}/voting" %>";
    </script>
  <% end %>

</body>
</html>
