<!DOCTYPE html>
<html>
<head>
  <title>Votogenic</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container-fluid">

  <%= render 'layouts/navigation/navigation_bar' %>

  <%= render '/layouts/shared/success_msg' %>
  <%= render '/layouts/shared/warning_msg' %>
  <%= render '/layouts/shared/error_msg' %>

  <%= render '/layouts/banners/jumbotron' %>

  <%= yield %>
  
  <%= render 'layouts/shared/canvas' %>
  <%= render 'layouts/shared/voting_canvas' %>

</div>

  <% if @autostart_voting %>
    <script type="text/javascript">
      var autostart_url = "<%= "/#{@autostart_voting.voting_type}_votings/#{@autostart_voting.id}/voting" %>";
    </script>
  <% end %>

<footer class="footer">
  <div class="container">
    <%= render '/layouts/shared/footer' %>
  </div>
</footer>

</body>
</html>
