  <!-- Header  -->

  <div class="row">
    <div class="col-sm-1">
      &nbsp;
    </div>
    <div class="col-sm-10 text-danger">
      <h3>
        Complaint
        <small>You are about to flag this voting. Please be careful to provide all the necessary informatiom for us to follow up on your submission.</small>
      </h3>
    </div>
    <div class="col-sm-1">
      &nbsp;
    </div>
  </div>


  <div class="row">
    <div class="col-sm-1">
      &nbsp;
    </div>
    <div class="col-sm-3">
      <%= image_tag @voting.image_items[0].image_file.url(:xs), class: 'image-thumbnail v_item_image_xs' %>
    </div>
    <div class="col-sm-7">
      <h4><%= @voting.title %></h4>
      <%= @voting.description[0..100] %> ...
    </div>
    <div class="col-sm-1">
      &nbsp;
    </div>
  </div>

<form action="<%= "/votings/#{@voting.id}/voting_complaints/create" %>" method="post" id="recommend_form">

<br>

  <!-- Your Name  -->

  <div class="row">
    <div class="col-sm-1">
      &nbsp;
    </div>
    <div class="col-sm-3 text-info">
      Your Friends Name:
    </div>
    <div class="col-sm-7">
      <input type="text" class="form-control" name="voting[friends_name]" placeholder="Your friends name.">
    </div>
    <div class="col-sm-1">
      &nbsp;
    </div>
  </div>
  
  <br>

  <!-- email adresses  -->
  <div class="row">
    <div class="col-sm-1">
      &nbsp;
    </div>
    <div class="col-sm-3 text-info">
      Your Friends Email:
    </div>
    <div class="col-sm-7">
      <input type="email" class="form-control" id="email_input" placeholder="name@domain.com" name="voting[friends_email_adress]">
    </div>
    <div class="col-sm-1">
      &nbsp;
    </div>
  </div>

<br>
<!-- submit  -->
  <div class="row">
    <div class="col-sm-1">
      &nbsp;
    </div>
    <div class="col-sm-3 text-info">
      &nbsp;
    </div>
    <div class="col-sm-7">
      <button type="submit" class="btn btn-danger" id="send_share_button">Submit</button>
      <%= image_tag 'ajax-loader.gif', id: 'loading_gif', style: 'display: none; width: 100%;' %>
    </div>
    <div class="col-sm-1">
      &nbsp;
    </div>
  </div>

<script type="text/javascript">

$("#complaint_form").ajaxForm({
      type: "post", 
      error : function(jqXHR, textStatus, errorThrown) {
        alert('There was a problem loading the requested content. Please try again later');
      },
      success : function(html, resultText) {
        $('#overlay').html(html);
      }
    });
$('#send_complaint_button').click(function(){
    $('#send_share_button').hide();
    $('#loading_gif').fadeIn();
  });

</script>
