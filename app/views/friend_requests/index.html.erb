<h3>Hi there! <br>
<small>There are some friend requests for you:</small></h3>
<div class="row">
	<% @friend_requests.each_with_index do |request, i| %>

  		<div class="col col-md-4 text-center">
  			<%= image_tag request.user.user_image.url(:s), class: 'img-thumbnail' %>
  			<h3><%= request.user.first_name + ' ' + request.user.last_name %></h3>
        <%= form_for request do %><button class="btn btn-success"><span class="glyphicon glyphicon-plus"></span> Accept</button><% end %>
  			&nbsp; - OR - &nbsp;
        <%= link_to request, method: :delete, data: { confirm: 'Are you sure?' } do %>
  			<button function="button" class="btn btn-danger"><span class="glyphicon glyphicon-minus"></span> Ignore</button>
        <% end %>
  		</div>

  	<% if ((i+1) % 3) == 0 %>
</div>  		
<div class="row">
  	<% end %>
	
	<% end %>
</div>
