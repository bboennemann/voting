<p id="notice"><%= notice %></p>

<h1>Listing Image Items</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @image_items.each do |image_item| %>
      <tr>
        <td><%= link_to 'Show', image_item %></td>
        <td><%= link_to 'Edit', edit_image_item_path(image_item) %></td>
        <td><%= link_to 'Destroy', image_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

