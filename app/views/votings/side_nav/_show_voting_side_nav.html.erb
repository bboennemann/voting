<%= image_tag @voting.user.user_image.url(:xs), class: 'img-thumbnail', alt: @voting.user.first_name %>
  <p>
    <%= link_to user_path(@voting.user_id) do %><i class="glyphicon glyphicon-eye-open"> </i> <%= @voting.user.first_name %><% end %>
  </p>

<!-- only if this is not my own voting -->
<% if user_signed_in? && !is_owner?(@voting.user_id) %>
  <!-- if we are friends then show message button -->
  <% if @voting.user.friends.include?(current_user.id.to_s) %>

    <%= link_to user_path(@voting.user_id) do %><button class="btn btn-sm btn-info"><i class="glyphicon glyphicon-envelope"> </i> Message</button><% end %>
  
  <% else %>
  <!-- if we are not friends then show add friend button -->
    <button class="btn btn-sm btn-info" data-friend="<%= @voting.user.id %>" id="send_friend_request"><i class="glyphicon glyphicon-user"></i> Add Friend</button>
    <button class="btn btn-sm btn-success" style="display: none;" id="friend_request_sent"><i class="glyphicon glyphicon-check"></i> Request Sent</button>
  <% end %>
  <br><br>
<% end %>

