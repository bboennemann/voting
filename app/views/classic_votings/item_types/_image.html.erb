
<% @image_items.each_with_index do |item, index| %>

	<div class="row">
    	<div class="col-md-1">
    		<h1><%= index + 1 %></h1>
    		<br>

    		<span class="badge"><%= item.hits %></span>
    		<span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>
  			
  			<br><br>

  			<span class="badge"><%= item.score %></span>
  			<span class="glyphicon glyphicon-stats" aria-hidden="true"></span>
        <%= link_to '', item, method: :delete, data: { confirm: 'Are you sure?' }, :class => "glyphicon glyphicon-remove-circle", :style => "position: absolute; left: -35px; top: 0px; font-size: 2em;"  %>
          
  			
    	</div>

    	<div class="col-md-4">
    		<%= image_tag item.image_file.url(:s), class: "img-rounded" %><br>
    	</div>

    	<div class="col-md-3">
    		Description: <%= item.description %>
    	</div>

    	<div class="col-md-4">
    		<%= image_tag item.user.user_image.url(:xs), class: 'img-thumbnail', alt: item.user.first_name %>
        <p>
          By <%= link_to item.user.first_name, user_path(item.user_id)  %>
        </p>
        <p>
          At <%= item.created_at.strftime("%-d/%-m/%y: %H:%M") unless item.created_at.nil? %>
        </p>
    	</div>

    </div>
    

    <br>

<% end %>
