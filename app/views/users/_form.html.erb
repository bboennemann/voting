  </div>

  <div class="form-group">
    <div class="col-lg-2 text-info">
      Last name:
    </div>
    <div class="col-lg-4">
      <%= f.text_field :last_name, class: 'form-control' %>
    </div>
    <div class="col-lg-6">
      &nbsp;
    </div>
  </div>

  <br>

  <div>
    <%= f.submit 'Save User' , class: 'btn btn-success' %>
